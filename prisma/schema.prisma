generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Project {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    created_at   DateTime
    updated_at   DateTime
    name         String
    full_name    String   @unique
    description  String
    featured     Boolean
    languages    String
    commit_count Int
    stars        Int
    fork         Boolean
    website      String
}
