generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Project {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    created_at   DateTime
    updated_at   DateTime
    name         String
    full_name    String   @unique
    description  String
    featured     Boolean
    languages    String
    tags         String
    commit_count Int
    stars        Int
    fork         Boolean
    website      String
}

model BlogPost {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    blogId Int @unique
    created_at DateTime @default(now())
    updated_at DateTime @default(now())
    posted_at DateTime @default(now())
    posted Boolean @default(false)
    title String
    sub_heading String
    authors String[]
    content String
}

model Session {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    session_token String   @unique
    expires      DateTime 
}

model Password {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    password String
}
